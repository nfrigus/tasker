{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es6", "esnext"],
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "build",
    "target": "ES2018",
    "types": ["node", "reflect-metadata"]
  },
  "exclude": ["node_modules", "**/*.spec.ts"],
  "include": ["src/**/*", "node_modules/typescript/lib/lib.dom.d.ts"]
}
